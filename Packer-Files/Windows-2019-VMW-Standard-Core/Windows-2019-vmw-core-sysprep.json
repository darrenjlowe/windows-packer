{
  "variables": {
    "os_name": "windows-2019-vmw-standard-gui",
    "image_name": "sysprep",
    "guest_additions_mode": "disable",
    "disk_size": "81920",
    "headless": "false",
    "communicator": "winrm",
    "winrm_username": "Administrator",
    "winrm_password": "Test123456",
    "winrm_timeout": "12h",
    "pause_before_connecting": "10m",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
    "shutdown_timeout": "15m",
    "cpus": "4",
    "memory": "4096",
    "execution_policy": "bypass",
    "source_path": "output-windows-2019-vmw-standard-core-updates/windows-2019-vmw-standard-core-updates.vmx"
  },
    "builders": [
        {
            "type": "vmware-vmx",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "shutdown_timeout": "{{ user `shutdown_timeout` }}",
            "output_directory": "./output-{{user `os_name`}}-{{ user `image_name`}}/",
            "vm_name": "{{user `os_name`}}-{{ user `image_name`}}",
            "communicator": "{{ user `communicator` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "source_path": "{{ user `source_path` }}",
            "vmx_data": {
              "memsize": "{{user `memory`}}",
              "numvcpus": "{{user `cpus`}}",
              "virtualHW.version": "14",
              "network": "bridged",
              "scsi0.virtualDev": "lsisas1068"
            },
            "floppy_files": [
              "default-base/Windows-2019-Standard-Core/Post_Autounattend.xml",
              "Scripts/PackerShutdown.bat"
            ]
        }
    ],
      "provisioners": [
        {
            "type": "powershell",
            "elevated_user": "{{ user `winrm_username` }}",
            "elevated_password": "{{ user `winrm_password` }}",
            "script": "Scripts/Set-Sysprep.ps1"
          }
      ]
  }